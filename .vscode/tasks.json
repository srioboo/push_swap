{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"command": "/bin/gcc",
			"type": "cppbuild",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.c",
				"-Llib",
				"-l:libft.a",
				"-o",
				"${fileDirname}/push_swap"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task for build the program."
		}
	]
}
