{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build-push_swap",
			"command": "/bin/gcc",
			"type": "cppbuild",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"*.c",
				"-Iinclude",
				"-o",
				"${fileDirname}/push_swap"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task for build the program."
		},
		{
			"label": "Test-Build-push_swap",
			"command": "/bin/gcc",
			"type": "cppbuild",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"../push_swap_utils.c",
				"../push_swap_validate.c",
				"../ft_*.c",
				"../operation_*.c",
				"../link_*.c",
				"main_test.c",
				"test_*.c",
				"-I../include",
				"-Iinclude",
				"-Llib",
				"-lfuntest",
				"-o",
				"${fileDirname}/push_swap"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task for build the program."
		}
	]
}
